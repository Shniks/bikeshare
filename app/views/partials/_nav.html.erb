<nav>
  <ul class="nav-left">
    <div class="brand-logo">
      <i class="fas fa-bicycle"></i>
      <% if current_user %>
        <a href="/dashboard">Bike Share</a>
      <% elsif current_admin? %>
        <a href="admin/dashboard">Bike Share</a>
      <% else %>
        <a href="/">Bike Share</a>
      <% end %>

    </div>
  </ul>
  <% flash.each do |name, msg| %>
  <%= content_tag :div, sanitize(msg), class: name %>
  <% end %>
  <div class='nav-right'>
    <% if current_admin? %>
    <div class='nav-link'>
      <%= link_to 'Bike Shop', admin_accessories_path %>
