    <% else %>
    <div class='nav-link'>
      <%= link_to 'Bike Shop', accessories_path %>
    </div>
    <% end %>
    <div class='nav-link'>
      <%= link_to 'Trips', trips_path %>
    </div>
    <div class='nav-link'>
      <%= link_to 'Stations', stations_path %>
    </div>
    <div class='nav-link'>
      <%= link_to 'Conditions', conditions_path %>
    </div>
    <div class='nav-link'>
      <%= link_to "Cart: #{@cart.total_count}", cart_path %>
    </div>
    <div class="nav-link">
      <% if current_user %>
        <%= link_to 'Logout', logout_path %>
      <% else %>
        <%= link_to 'Login', login_path %>
      <% end %>
    </div>
</div>
