<div class="class=station_<%= @station.id %>">
  <h1><%= @station.name %></h1>
  <h4>Dock Count: <%= @station.dock_count %></h4>
  <h4>City<%= @station.city %></h4>
  <h4>Installation Date: <%= @station.installation_date %></h4>

  <% if current_admin? %>
    <%= link_to edit_admin_station_path(@station) do %>
        <i class="far fa-edit"></i>
    <% end %>

    <%= link_to admin_station_path(@station), method: 'delete' do %>
        <i class="fas fa-trash-alt">
    <% end %>
  <% end %>
</div>
