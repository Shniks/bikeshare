<section class = 'title'>
  <h1>All Stations</h1>
</section>
<section class = 'title'>
<% if current_user %>
  <h3><%= link_to '>>>>Go to Stations Dashboard', stations_dashboard_path %></h3>
<% end %>
</section>
<section class = 'title'>
  <% if current_admin? %>
    <p><%= link_to 'Add a New Station!', new_admin_station_path %></p>
  <% end %>
</section>

<table>
  <tr>
    <th>Name</th>
    <th>Dock Count</th>
    <th>City</th>
    <th>Installation Date</th>
    <% if current_admin? %>
      <th>Edit</th>
      <th>Delete</th>
    <% end %>
  </tr>
  <% @stations.each do |station| %>
    <tr class=station_<%= station.id %>>
      <td><%= link_to station.name, "/#{station.slug}" %></td>
      <td align='right'><%= station.dock_count %></td>
      <td align='right'><%= station.city %></td>
      <td align='right'><%= station.installation_date.strftime('%d %B %Y') %></td>
      <% if current_admin? %>

      <td><%= link_to edit_admin_station_path(station) do %>
          <i class="far fa-edit"></i>
      <% end %></td>

      <td><%= link_to admin_station_path(station), method: 'delete' do %>
          <i class="fas fa-trash-alt"></i>
      <% end %></td>

      <% end %>
    </tr>
  <% end %>
</table>
