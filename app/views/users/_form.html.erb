<%= form_for @user do |f| %>
  <div class='form_field'>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class='form_field'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class='form_field'>
    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit 'Submit' %>
<% end %>
