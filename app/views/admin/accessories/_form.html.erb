<%= form_for [:admin, @accessory] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :image_file_name, 'Link to Image' %>
  <%= f.url_field :image_file_name %>

  <%= f.submit %>
<% end %>
