<%= form_for [:admin, @accessory] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :role, 'Active' %>
  <%= f.check_box(:role, {}, "active", "retired") %>

  <%= f.submit %>
<% end %>
