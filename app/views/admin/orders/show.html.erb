<h1>Order <%= @order.id %></h1>
<p>Purchaser's Full Name: <%= @order.user.full_name %></p>
<p>Purchaser's Address: <%= @order.user.address %></p>
<ul class="items">
  <% @order.order_accessories.each do |accessory| %>
    <li id="accessory_<%= item.accessory.id %>">
      <h1><%= link_to accessory.name, admin_accessory_path(accessory) %></h1>
      <p>Quantity: <%= accessory.total_quantity %></p>
      <p>Line Item Subtotal: <%= number_to_currency(accessory.price * accessory.total_quantity) %></p>
    </li>
  <% end %>
</ul>
<h2>Total: <%= number_to_currency(@order.total) %></h2>
<h3>Status <%= @order.status %></h3>
<h4>Submitted at: <%= @order.created_at %></h4>
<% if @order.status == 'completed' || @order.status == 'cancelled' %>
  <h4><%= @order.status.capitalize %> on <%= @order.updated_at %></h4>
<% end %>
