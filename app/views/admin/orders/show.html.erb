<section class='title'>
  <h1>Order <%= @order.id %></h1>
</section>
<p>Purchaser's Full Name: <%= @order.user.full_name %></p>
<p>Purchaser's Address: <%= @order.user.address %></p>
<ul class="items">
  <% @order.order_accessories.each do |item| %>
    <li id="accessory_<%= item.accessory.id %>">
      <p><%= link_to item.accessory.title, accessory_path(item.accessory.id) %></p>
      <p>Item Quantity: <%= item.quantity %></p>
      <p>Item Subtotal: <%= number_to_currency(item.subtotal) %></p>
    </li>
  <% end %>
</ul>
<h2>Total: <%= number_to_currency(@order.total) %></h2>
<h3>Status <%= @order.status %></h3>
<h4>Submitted at: <%= @order.created_at.strftime('%d %B %Y') %></h4>
<% if @order.status == 'completed' || @order.status == 'cancelled' %>
  <h4><%= @order.status.capitalize %> on <%= @order.updated_at.strftime('%d %B %Y') %></h4>
<% end %>
